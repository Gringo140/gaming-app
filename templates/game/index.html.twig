{% extends 'base.html.twig' %}

{% block title %}searching...{% endblock %}

{% block body %}
    <table class="table">
        <tbody align="center">
        <div class="container">
            <div align="center" class="col-12">
                <div align="center" class="col-6">
                    <br>
                    {{ form(formGame) }}
                </div>
                <div align="center" class="row">
                    {% for game in games %}
                    <div class="card text-white bg-primary mb-6" style="width: 30rem;" align="center">
                        <div class="card-body">
                            <h5 class="card-title">{{ game.name }}</h5>
                            <p class="card-text">
                            <div>Released: {{ game.released ? game.released|date('Y-m-d') : '' }}</div>
                            <div>Platforms: {{ game.platform }}
                            </div>
                            <div>Rating: {{ game.rating }}/5</div>
                            </p>
                        </div>
                        <div>
                            <video class="card-img-top" src="{{ game.video }}" controls></video>
                        </div>
                    </div>
                    {% else %}
                </div>
            </div>
        </div>
        <tr>
            <td colspan="7">no records found</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
